<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefWidth="450.0" spacing="20.0" styleClass="main-card" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.eventticketapp.gui.coordinatorControllers.AddVoucherController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT">
        <Label styleClass="header-title" text="Create Special Voucher" />
        <Region HBox.hgrow="ALWAYS" />
        <Button mnemonicParsing="false" styleClass="icon-btn-close" text="âœ•" />
    </HBox>

    <VBox spacing="8.0">
        <Label styleClass="input-label" text="Voucher Name *" />
        <TextField fx:id="txtName" promptText="Free Beer, 50% Off Drink..." styleClass="modern-input" />
    </VBox>

    <VBox spacing="8.0">
        <Label styleClass="input-label" text="Description *" />
        <TextArea fx:id="txtDescription" prefHeight="80.0" styleClass="modern-input" wrapText="true" />
    </VBox>

    <HBox alignment="CENTER_LEFT" styleClass="toggle-container">
        <VBox spacing="4.0" HBox.hgrow="ALWAYS">
            <Label styleClass="input-label" text="Valid for All Events" />
            <Label styleClass="text-sub" text="Can be redeemed at any event" />
        </VBox>
        <ToggleButton fx:id="toggleAllEvents" mnemonicParsing="false" styleClass="btn-secondary" text="OFF" />
    </HBox>

    <VBox spacing="8.0">
        <Label styleClass="input-label" text="Event *" />
        <ComboBox fx:id="comboEvents" maxWidth="Infinity" promptText="Select event" styleClass="modern-input" />
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Button mnemonicParsing="false"  styleClass="btn-secondary" text="Cancel" />
        <Button mnemonicParsing="false"  styleClass="btn-primary" text="Create Voucher" />
    </HBox>
</VBox>