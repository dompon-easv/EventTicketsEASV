<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="25.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.eventticketapp.gui.adminControllers.UserManagementController">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="header-title" text="User Management" />
                        <Label styleClass="header-subtitle" text="Manage system users and event coordinators" />
                    </children>
                </VBox>
                <Button styleClass="add-user-btn" text="+ Add User" onAction="#onAddUser"/>
            </children>
        </HBox>

        <VBox spacing="20.0" styleClass="table-card" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>
            <children>
                <Label styleClass="section-title" text="All Users" />

                <TableView fx:id="userTable" styleClass="modern-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Name" />
                        <TableColumn fx:id="emailColumn" prefWidth="300.0" text="Email" />
                        <TableColumn fx:id="roleColumn" prefWidth="150.0" text="Role" />
                        <TableColumn fx:id="actionsColumn" prefWidth="120.0" style="-fx-alignment: CENTER-RIGHT;" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>