<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<BorderPane fx:id="mainRoot"
            prefHeight="720.0"
            prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dk.easv.eventticketapp.gui.adminControllers.AdminMainController">

    <stylesheets>
        <URL value="@../../../../../style.css" />
    </stylesheets>

    <!-- ================= HEADER ================= -->
    <top>
        <VBox spacing="5.0"
              style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <padding>
                <Insets bottom="15.0" left="30.0" right="30.0" top="15.0"/>
            </padding>

            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">

                    <!-- Left side: App Title -->
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Label text="ðŸŽŸï¸" style="-fx-font-size: 32px;" />
                            <VBox>
                                <children>
                                    <Label text="Event Ticketing" textFill="#333333">
                                        <font>
                                            <Font name="System Bold" size="28.0"/>
                                        </font>
                                    </Label>
                                    <Label text="Management System" textFill="#666666">
                                        <font>
                                            <Font size="16.0"/>
                                        </font>
                                    </Label>
                                </children>
                            </VBox>
                        </children>
                    </HBox>

                    <!-- Spacer -->
                    <Region HBox.hgrow="ALWAYS"/>

                    <!-- Right side: Admin Profile + Logout -->
                    <HBox alignment="CENTER_RIGHT" spacing="15.0">

                        <!-- Admin Info -->
                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                            <children>
                                <VBox alignment="CENTER_RIGHT">
                                    <children>
                                        <Label text="Admin User" textFill="#333333">
                                            <font>
                                                <Font name="System Bold" size="14.0"/>
                                            </font>
                                        </Label>
                                        <Label text="Admin" textFill="#666666">
                                            <font>
                                                <Font size="12.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>

                                <!-- Avatar -->
                                <StackPane>
                                    <children>
                                        <Circle fill="#F44336"
                                                radius="25.0"
                                                stroke="WHITE"
                                                strokeType="INSIDE"
                                                strokeWidth="2.0"/>
                                        <Label text="AD" textFill="WHITE">
                                            <font>
                                                <Font name="System Bold" size="16.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </StackPane>
                            </children>
                        </HBox>

                        <!-- Divider -->
                        <Label text="|" textFill="#CCCCCC" style="-fx-font-size: 20px;"/>

                        <!-- Logout Button -->
                        <Button onAction="#handleLogout"
                                style="-fx-background-color: transparent; -fx-cursor: hand;"
                                textFill="#666666">
                            <graphic>
                                <HBox alignment="CENTER" spacing="5.0">
                                    <children>
                                        <Label text="ðŸšª" style="-fx-font-size: 16px;"/>
                                        <Label text="Logout" textFill="#666666">
                                            <font>
                                                <Font size="14.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                            </graphic>
                        </Button>

                    </HBox>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- ================= SIDEBAR ================= -->
    <left>
        <VBox prefWidth="220.0"
              spacing="10.0"
              styleClass="sidebar">
            <padding>
                <Insets left="15.0" right="15.0" top="20.0"/>
            </padding>
            <children>
                <Button maxWidth="Infinity" onAction="#showHome" styleClass="nav-button" text="Home"/>
                <Button maxWidth="Infinity" onAction="#showUsers" styleClass="nav-button" text="Users"/>
                <Button maxWidth="Infinity" onAction="#showEvents" styleClass="nav-button" text="Events"/>
            </children>
        </VBox>
    </left>

    <!-- ================= CENTER ================= -->
    <center>
        <StackPane fx:id="contentArea"/>
    </center>

</BorderPane>
