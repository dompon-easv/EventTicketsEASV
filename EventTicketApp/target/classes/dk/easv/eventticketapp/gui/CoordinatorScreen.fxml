<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="25.0" styleClass="content-area" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <VBox HBox.hgrow="ALWAYS">
                    <children>
                        <Label styleClass="header-title" text="User Management" />
                        <Label styleClass="header-subtitle" text="Manage system users and event coordinators" />
                    </children>
                </VBox>
                <Button graphicTextGap="8.0" styleClass="add-button" text="+ Add User">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </Button>
            </children>
        </HBox>

        <VBox spacing="15.0" styleClass="table-card">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label styleClass="section-title" text="All Users" />
                <TableView fx:id="userTable" fixedCellSize="50.0" prefHeight="400.0" styleClass="modern-table">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="250.0" text="Name" />
                        <TableColumn fx:id="emailColumn" prefWidth="300.0" text="Email" />
                        <TableColumn fx:id="roleColumn" prefWidth="150.0" text="Role" />
                        <TableColumn fx:id="actionsColumn" prefWidth="120.0" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>