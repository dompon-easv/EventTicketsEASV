<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.eventticketapp.gui.coordinatorControllers.IssuedTicketsController">
    <children>
        <VBox styleClass="main-card" VBox.vgrow="ALWAYS">
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
            <children>
                <TableView styleClass="modern-table" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="250.0" text="Customer" />
                        <TableColumn prefWidth="200.0" text="Ticket Type" />
                        <TableColumn prefWidth="180.0" text="Issued" />
                        <TableColumn prefWidth="100.0" text="Status" />
                        <TableColumn prefWidth="100.0" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>
