<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" styleClass="content-scroll-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.eventticketapp.gui.adminViews.CoordinatorSpecialVoucherController">
    <content>
        <VBox spacing="25.0" styleClass="main-content-container">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="header-title" text="My Events" />
                                <Label styleClass="header-subtitle" text="Manage your assigned events" />
                            </children>
                        </VBox>
                        <HBox styleClass="toggle-container">
                            <children>
                                <Button styleClass="toggle-btn-left" text="ðŸ“… Events" />
                                <Button styleClass="toggle-btn-right, active" text="ðŸŽ« Special Vouchers" />
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT">
                    <children>
                        <VBox HBox.hgrow="ALWAYS">
                            <children>
                                <Label styleClass="section-title" text="Special Vouchers" />
                                <Label styleClass="section-subtitle" text="Create one-time use vouchers for free items or discounts" />
                            </children>
                        </VBox>
                        <Button styleClass="btn-primary" text="+ Create Voucher" />
                    </children>
                </HBox>

                <VBox styleClass="main-card" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                    <children>
                        <TableView fx:id="voucherTable" styleClass="modern-table" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="voucherColumn" prefWidth="250.0" text="Voucher" />
                                <TableColumn fx:id="eventColumn" prefWidth="200.0" text="Event" />
                                <TableColumn fx:id="createdColumn" prefWidth="150.0" text="Created" />
                                <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
                                <TableColumn fx:id="actionsColumn" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Actions" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</ScrollPane>