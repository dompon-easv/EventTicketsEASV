<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" styleClass="content-scroll-pane" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.eventticketapp.gui.coordinatorControllers.AddEventController">
    <content>
        <VBox spacing="25.0" styleClass="main-content-container">
            <padding>
                <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
            </padding>
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label styleClass="header-title" text="My Events" />
                        <Label styleClass="header-subtitle" text="Manage your assigned events" />
                    </children>
                </VBox>

                <VBox spacing="20.0" styleClass="main-card">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                    <children>
                        <Label styleClass="card-title" text="Create New Event" />

                        <VBox styleClass="input-group">
                            <Label styleClass="input-label" text="Event Name *" />
                            <TextField promptText="Summer Music Festival" styleClass="modern-input" />
                        </VBox>

                        <HBox spacing="20.0">
                            <children>
                                <VBox styleClass="input-group" HBox.hgrow="ALWAYS">
                                    <Label styleClass="input-label" text="Start Date &amp; Time *" />
                                    <DatePicker maxWidth="Infinity" promptText="dd/mm/yyyy, --:--" styleClass="modern-input" />
                                </VBox>
                                <VBox styleClass="input-group" HBox.hgrow="ALWAYS">
                                    <Label styleClass="input-label" text="End Date &amp; Time" />
                                    <DatePicker maxWidth="Infinity" promptText="dd/mm/yyyy, --:--" styleClass="modern-input" />
                                </VBox>
                            </children>
                        </HBox>

                        <VBox styleClass="input-group">
                            <Label styleClass="input-label" text="Location *" />
                            <TextField promptText="Central Park Amphitheater" styleClass="modern-input" />
                        </VBox>

                        <VBox styleClass="input-group">
                            <Label styleClass="input-label" text="Location Guidance (How to get there)" />
                            <TextArea prefHeight="80.0" promptText="Take subway line A to..." styleClass="modern-input, modern-text-area" wrapText="true" />
                        </VBox>

                        <VBox styleClass="input-group">
                            <Label styleClass="input-label" text="Notes *" />
                            <TextArea prefHeight="80.0" promptText="Important information about the event..." styleClass="modern-input, modern-text-area" wrapText="true" />
                        </VBox>

                        <VBox spacing="10.0" styleClass="input-group">
                            <Label styleClass="input-label" text="Assign Coordinators" />
                            <VBox styleClass="selection-box">
                                <padding>
                                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                </padding>
                                <children>
                                    <CheckBox selected="true" styleClass="modern-checkbox" text="Coordinator" />
                                    <CheckBox styleClass="modern-checkbox" text="Coordinator">
                                        <VBox.margin>
                                            <Insets top="10.0" />
                                        </VBox.margin>
                                    </CheckBox>
                                </children>
                            </VBox>
                            <Label styleClass="helper-text" text="1 coordinator selected" />
                        </VBox>

                        <Separator styleClass="card-separator" />
                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                            <children>
                                <Button styleClass="btn-secondary" text="Cancel" />
                                <Button styleClass="btn-primary" text="Create Event" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</ScrollPane>
